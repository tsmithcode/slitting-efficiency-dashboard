@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <div class="page d-flex flex-grow-1">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="flex-fill d-flex flex-column">
            

            <div class="bottom-row px-4 small bg-dark text-light">
            <div>
                    💼 Built by <a class="text-light" href="mailto:thomas@tsmithcode.ai">Thomas Smith</a> ·
                <a class="text-light" href="https://tsmithcode.ai" target="_blank">tsmithcode.ai</a>
            </div>
            </div>

            <div class="top-row px-4">
                <a href="/github.com/tsmithcode/slitting-efficiency-dashboard">🐙 GitHub Repo</a>
            </div>

            <article class="content px-4">
                @Body
            </article>

            <!-- 🧾 Footer -->
            <footer class="mt-auto py-4 border-top text-center small text-muted">
                           
                <div>
                    ⚙️ Built with Blazor Server (.NET 8), Recharts, TailwindCSS, Bootstrap
                </div>
            </footer>
        </main>
    </div>

    
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
