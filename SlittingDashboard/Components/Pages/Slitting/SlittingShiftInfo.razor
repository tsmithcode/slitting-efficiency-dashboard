@* Components/Slitting/SlittingShiftInfo.razor *@
@using SlittingDashboard.Data.Models
@using SlittingDashboard.Data.Constants
@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="@Shift" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row mb-4 gap-4">
        <div class="col-md-6">
            <label class="form-label fw-semibold">Date</label>
            <InputDate @bind-Value="Shift.Date" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">Shift</label>
            <InputNumber @bind-Value="Shift.Shift" class="form-control" />
        </div>

        <div class="col-md-12">
            <label class="form-label fw-semibold">Team Lead</label>
            <InputSelect @bind-Value="Shift.TeamLead" class="form-select">
                <option value="">Select Team Lead</option>
                @foreach (var lead in Menus.TeamLeads.OrderBy(n => n))
                {
                    <option value="@lead">@lead</option>
                }
            </InputSelect>
        </div>

        <div class="col-md-12">
            <label class="form-label fw-semibold">Supervisor</label>
            <InputSelect @bind-Value="Shift.Supervisor" class="form-select">
                <option value="">Select Supervisor</option>
                @foreach (var supervisor in Menus.Supervisors.OrderBy(n => n))
                {
                    <option value="@supervisor">@supervisor</option>
                }
            </InputSelect>
        </div>

    </div>
</EditForm>

@code {
    [Parameter] public ShiftSummary Shift { get; set; } = default!;
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
